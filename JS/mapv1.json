
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "800",
  "height": "400",
"title": "Tornadoes in US",
"projection": {"type": "mercator"},
"layer": [
  {
  "data": {
    "url": "https://manojp19.github.io/FIT3179/JS/USwStateslowres.json", "format": {"type":"topojson", "feature": "cb_2018_us_state_20m"}
  },
  "mark": {"type":"geoshape", "fill": "dimgray", "stroke": "white"}
  },
  {
    "data": {
      "url": "https://manojp19.github.io/FIT3179/data/2018_all_tornadoes.csv"},
      "encoding": {
        "longitude": {"field": "slon", "type":"quantitative"},
        "latitude": {"field": "slat", "type":"quantitative"}
      },
      "layer": [
        {
 "mark": {
 "type": "circle",
 "tooltip": {"content": "data"}
 },
"encoding": {
 "size": {"field": "Diameter (m)",
 "type": "quantitative",
 "scale": {
 "domain": [10, 2000]
 }},
 "color": {"field": "Property Damage (USD)",
 "type": "quantitative",
 "scale":{ "type": "log",
 "domain": [1,100000000],
 "scheme":"blues"
 }
 }
 }
 }
      ]
    
 }
]
}
