{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "https://manojp19.github.io/FIT3179/data/tornado_monthly_count.csv"
  },
  "title": "Monthly Tornado Count in US",
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 14
      },
      "axis": {
          "domain": false
      }
  },
  "encoding": {
      "x": {
          "field": "Date",
          "timeUnit": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
              "labelAngle": 0
          }
      },
      "y": {
          "field": "Date",
          "timeUnit": "month",
          "type": "ordinal",
          "title": "Month"
      },
      
      "tooltip": {"field": "Count"}
  },
  "layer": [{
    "mark": "rect",
    "encoding": {
    "color": {
          "field": "Count",
          "aggregate": "max",
          "type": "quantitative",
          "legend": {
              "title": "Number"
          },
          "scale": {"type": "log", "domain": [0.1,783]}
      }
    }
  }]
  
}
