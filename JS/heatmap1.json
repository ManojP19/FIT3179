{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "https://manojp19.github.io/FIT3179/data/tornado_monthly_count.csv"
  },
  "title": "Monthly Tornado Count in US",
  "config": {
      "view": {
          "strokeWidth": 3,
          "step": 15
      },
      "axis": {
          "domain": false
      }
  },
  "encoding": {
      "x": {
          "field": "Date",
          "timeUnit": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
              "labelAngle": 45
          }
      },
      "y": {
          "field": "Date",
          "timeUnit": "month",
          "type": "ordinal",
          "title": "Month"
      },
      "tooltip": [{"field": "Count"}]
  },
  "layer": [{
    "mark": "rect",
    "encoding": {
    "color": {
          "field": "Count",
          "aggregate": "sum",
          "type": "quantitative",
          "legend": {
              "title": "Number"
          },
          "scale": {"type": "log", "domain": [0.1, 50, 800]}
      }
    }
  },
  {
    "mark": {
      "type": "text",
      "fontSize": 8,
      "color": "white"
    },
    "encoding": {
      "text": {"field": "Count"}
    },
    "transform": [{"filter":"datum.Count>300"}]
  },
  {
    "mark": {
      "type": "text",
      "fontSize": 8,
      "color": "black"
    },
    "encoding": {
      "text": {"field": "Count","format": ".0f"}
    },
    "transform": [{"filter":"datum.Count<6"}]
  }]
  
}
